<UserControl
    x:Class="Wontstop.Climb.Ui.Uwp.Views.TickDetailsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="ContextPanel" 
        HorizontalAlignment="Stretch"
        Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <ComboBox x:Name="AscentTypeComboBox"
            Grid.Row="0" Grid.Column="0"
            Margin="12,12,12,8"
            VerticalAlignment="Center"
            HorizontalAlignment="Stretch"
            PlaceholderText="ascent type"
            ItemsSource="{Binding AscentTypes.Values}"
            SelectedIndex="{Binding SelectedAscentIdx, Mode=TwoWay}">
        </ComboBox>

        <StackPanel x:Name="TriesCountPanel"
            Grid.Row="0" Grid.Column="1" 
            Margin="12,8,12,8"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <Button x:Name="DecrementTriesButton"
                Command="{Binding DecrementTriesCommand}">
                <TextBlock 
                    Text="&#59192;"
                    VerticalAlignment="Center"
                    FontFamily="Segoe MDL2 Assets"/>
            </Button>
            <TextBlock  
                Width="24"
                TextAlignment="Center"
                VerticalAlignment="Center"
                Text="{Binding NoTries, Mode=TwoWay}"/>
            <Button x:Name="IncrementTriesButton"
                Command="{Binding IncrementTicksCommand}">
                <TextBlock 
                    Text="&#59152;"
                    VerticalAlignment="Center"
                    FontFamily="Segoe MDL2 Assets"/>
            </Button>
        </StackPanel>

        <Button x:Name="TickButton"
            Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
            Margin="12,4,12,20"
            Content="Tick"
            HorizontalAlignment="Stretch"
            Command="{Binding TickCommand}">
        </Button>
    </Grid>
</UserControl>
