<UserControl
    x:Class="Wontstop.Climb.Ui.Uwp.UserControls.TriesCounterUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
   
    <StackPanel x:Name="TriesCounterControlPanel"
        Orientation="Horizontal">
        <Button x:Name="DecrementTriesButton">
            <TextBlock 
                Text="&#59192;"
                VerticalAlignment="Center"
                FontFamily="Segoe MDL2 Assets"/>
        </Button>
        <TextBlock x:Name="TriesCountTextBlock"
            Width="24"
            TextAlignment="Center"
            VerticalAlignment="Center"/>
        <Button x:Name="IncrementTriesButton">
            <TextBlock 
                Text="&#59152;"
                VerticalAlignment="Center"
                FontFamily="Segoe MDL2 Assets"/>
        </Button>
    </StackPanel>
</UserControl>
