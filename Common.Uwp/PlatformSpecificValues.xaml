<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Breakpoint dimensions-->
    <x:Double x:Key="SmallDeviceMaxWidth">720</x:Double>
    <x:Double x:Key="MediumDeviceMaxWidth">1024</x:Double>
    
    <!--TopBar dimensions-->
    <x:Double x:Key="TopBarHeight">48</x:Double>
    <Thickness x:Key="TopBarThickness">0,48,0,0</Thickness>

    <!--MenuItems dimensions-->
    <x:Double x:Key="MenuItemHeight">48</x:Double>
    <x:Double x:Key="MenuItemCompactPanelWidth">48</x:Double>
    <Thickness x:Key="MenuItemCompactPanelThickness">48,0,0,0</Thickness>
    <x:Double x:Key="MenuItemExpandedPanelWidth">200</x:Double>
    <Thickness x:Key="MenuItemExpandedPanelThickness">200,0,0,0</Thickness>
    <x:Double x:Key="MenuItemVerticalSelectionWidth">4</x:Double>

    <!--Progress dimensions-->
    <x:Double x:Key="ProgressSize">48</x:Double>
    
</ResourceDictionary>

